{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "urls": "http://*:5000",
  "ProSettings": {
    "NavTheme": "light",
    "Layout": "side",
    "ContentWidth": "Fluid",
    "FixedHeader": false,
    "FixSiderbar": true,
    "Title": "GraphRag.Net",
    "PrimaryColor": "daybreak",
    "ColorWeak": false,
    "SplitMenus": false,
    "HeaderRender": true,
    "FooterRender": true,
    "MenuRender": true,
    "MenuHeaderRender": true,
    "HeaderHeight": 48
  },
  "GraphOpenAI": {
    "Key": "YourSecretKey",
    "EndPoint": "https://api.openai.com/",
    "ChatModel": "gpt-4o",
    "EmbeddingModel": "text-embedding-3-small"
  },
  "TextChunker": {
    "LinesToken": 100,
    "ParagraphsToken": 1000
  },
  "GraphDBConnection": {
    "DbType": "Sqlite", //PostgreSQL
    "DBConnection": "Data Source=graph.db",
    "VectorConnection": "graphmem.db",
    "VectorSize": 1536 //PostgreSQL, needs to be set; for SQLite, it does not need to be set
  },
  "GraphSearch": {
    "SearchMinRelevance": 0.5,
    "SearchLimit": 3,
    "NodeDepth": 3,
    "MaxNodes":10
  },
  "GraphSys": {
    "RetryCounnt": 2 //Number of retries. Using domestic models may result in JSON extraction failures. Increasing the number of retries can improve usability.
  }
}
